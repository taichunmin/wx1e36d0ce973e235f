.game-poster {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 400rpx;
}

.game-inner {
    position: relative;
    background-color: #20232a;
    margin-top: 380rpx;
    border-top-left-radius: var(--border-radius-lg);
    border-top-right-radius: var(--border-radius-lg);
}

.game-info {
    position: relative;
    display: flex;
}

.game-info .game-info-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100%;
    flex-shrink: 0;
    margin-right: 30rpx;
}

.game-info .game-info-image image {
    border-radius: inherit;
}

.game-info .game-info-content,.game-tab {
    flex: 1 1 auto;
}

.game-info .game-info-content .game-info-title {
    color: #fff;
}

.game-info .game-info-content .game-info-desc {
    color: var(--gray-6);
    text-align: justify;
}

.game-data-list .item .media {
    border: 2rpx solid var(--gray-8);
}

.game-data-list .item .item-title {
    color: #fff;
}

.game-tab {
    display: flex;
    background-color: #151719;
    border-radius: 50rpx;
}

.game-tab .item {
    flex: 1;
    text-align: center;
    color: #fff;
    padding: 20rpx 10rpx;
    border-radius: 50rpx;
}

.game-tab .item.active {
    background-color: #c61614;
}